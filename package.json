{
  "name": "Dust",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug"
  },
  "keywords": [
    "game-manager",
    "launcher",
    "dlsite",
    "itch.io",
    "electron"
  ],
  "author": "Florian Heyer",
  "license": "MIT",
  "description": "Game Manager f√ºr verschiedene Spieleplattformen wie DLSite, Itch.io und Co.",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.3",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "chart.js": "^4.4.9",
    "cheerio": "^1.0.0",
    "lowdb": "^7.0.1",
    "node-fetch": "^2.7.0",
    "redux": "^5.0.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.5"
  },
  "build": {
    "appId": "com.florianheyer.dust",
    "productName": "Dust Game Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
